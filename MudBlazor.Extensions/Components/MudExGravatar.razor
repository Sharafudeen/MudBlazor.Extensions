@inherits MudAvatar

@Inherited()

@code
{
    RenderFragment RenderGravatarImage()
    {
        return @<MudImage Src="@GravatarUrl" Alt="@Email"></MudImage>;
    }

    RenderFragment RenderLoading()
    {
        return @<MudProgressCircular Color="@GetLoadColor()" Size="@Size" Indeterminate="true" />;
    }
}