@inherits MudExBaseComponent<MudExPromptDialog>

<MudDialog Style="@Style" Class="@Class">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudExIcon Color="IconColor" Icon="@Icon" Class="mr-3 mb-n1"/>
            @MudDialog.Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText>@Message</MudText>
        <MudExTextField AutoFocus="true" HelperText="@HelperText" OnKeyUp="@OnKeyUp" Immediate="@Immediate" @bind-Value="@Value"></MudExTextField>
    </DialogContent>
    <DialogActions>
        <MudButton Color="@CancelColor" Variant="@CancelVariant" OnClick="Cancel">@TryLocalize(CancelText)</MudButton>
        <MudButton Disabled="@(!IsValid())" Color="@OkColor" Variant="@OkVariant" OnClick="@(Submit)">@TryLocalize(OkText)</MudButton>
    </DialogActions>
</MudDialog>
