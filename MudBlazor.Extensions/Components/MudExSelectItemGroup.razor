@typeparam T
@inherits MudBaseSelectItem

@if (!HideContent)
{

    if (Nested)
    {
        <MudExListItem T="T" Class="@Class" Style="@Stylename" Text="@Text" InitiallyExpanded="@InitiallyExpanded" ExpandedChanged="HandleExpandedChanged">
            <NestedList>
                @ChildContent
            </NestedList>
        </MudExListItem>
    }
    else
    {
        <MudExListSubHeader Class="@Class" Style="@Style" T="T" StickyTop="@StickyTop" Sticky="@Sticky">@Text</MudExListSubHeader>
        @ChildContent
    }
}