<PageTitle>@ChildContent</PageTitle>
<MudText Style="margin-top: auto; margin-bottom: auto; margin-right: 20px;" Typo="@(Typo ?? MudBlazor.Typo.h6)" Color="Color.Primary">@ChildContent</MudText>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    
    [Parameter]
    public Typo? Typo { get; set; } = null;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        if (MainLayout.Instance != null)
            MainLayout.Instance.LanguageChanged += (_, _) => InvokeAsync(StateHasChanged);
    }
}
