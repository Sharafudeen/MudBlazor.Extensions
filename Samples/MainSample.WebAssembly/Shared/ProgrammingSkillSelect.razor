@using MainSample.WebAssembly.Pages
@using MudBlazor.Extensions.Options
@inherits MudExSelect<MainSample.WebAssembly.Pages.Page_ObjectEditConfigured.ProgramingSkill>

@Inherited()

@code {

    public override Func<MainSample.WebAssembly.Pages.Page_ObjectEditConfigured.ProgramingSkill, string> ToStringFunc { get; set; } = ItemNameRenderFn;
    public override bool MultiSelection { get; set; } = true;
    public override ValuePresenter ValuePresenter { get; set; } = ValuePresenter.Chip;
    
    private RenderFragment Inherited() => builder => base.BuildRenderTree(builder);
    
    protected override Task<IList<Page_ObjectEditConfigured.ProgramingSkill>> GetAvailableItemsAsync(CancellationToken cancellation = default)
    {
        return Task.FromResult<IList<Page_ObjectEditConfigured.ProgramingSkill>>(new List<Page_ObjectEditConfigured.ProgramingSkill>
        {
            new() { Name = "C#"},
            new() { Name = "C++"},
            new() { Name = "C"},
            new() { Name = "Objective-C"},
            new() { Name = "Swift"},
            new() { Name = "TypeScript"},
            new() { Name = "JavaScript"},
            new() { Name = "VisualBasic"},
            new() { Name = "Pascal"}
        });
    }

    private static string ItemNameRenderFn(Page_ObjectEditConfigured.ProgramingSkill item) => $"{item.Name}";
}