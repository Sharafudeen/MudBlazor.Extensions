<MudHidden Breakpoint="Breakpoint.MdAndDown">
    <MudExSplitPanel SplitterCollapsableClass="@ContentClass" SplitterCollapsableStyle="margin-left: -3px" IsInitiallyCollapsed="@IsCollapsed" IsCollapsible="@IsCollapsible" Splittable="@Splittable" ColumnLayout="@ColumnLayout" Style="height: 80vh">
        <Left>
            @if (Left != null)
            {
                <MudExSplitPanelItem Class="@($"mud-ex-content-center {ContentClass}")" Style="@($"min-width: {MinWidthLeft}; height:auto; min-height: {MinHeightLeft};")">
                    @Left
                </MudExSplitPanelItem>
            }
        </Left>
        <Right>
            @if (Right != null)
            {
                <MudExSplitPanelItem Class="px-4 pt-2 pb-4" Style="@($"min-width: {MinWidthRight}; min-height: {MinHeightRight}; width: 65%;")">
                    @Right
                </MudExSplitPanelItem>
            }
        </Right>
    </MudExSplitPanel>
</MudHidden>

<MudHidden Breakpoint="Breakpoint.MdAndDown" Invert="true">
    @if (Left != null)
    {
        <MudExSplitPanelItem Class="mud-ex-content-center mud-ex-transparent-indicator-bg" Style="min-width: 350px; height:auto; min-height: 250px;">
            @Left
        </MudExSplitPanelItem>
    }
    
    @if (Right != null)
    {
        <MudExSplitPanelItem Class="px-4 pt-2 pb-4" Style="width: 100%;">
            @Right
        </MudExSplitPanelItem>
    }
    
</MudHidden>


@code {
    [Parameter] public string ContentClass { get; set; } = "mud-ex-transparent-indicator-bg";
    [Parameter] public RenderFragment? Left { get; set; }
    [Parameter] public RenderFragment? Right { get; set; }
    [Parameter] public bool IsCollapsed { get; set; }
    [Parameter] public bool IsCollapsible { get; set; } = true;
    [Parameter] public bool ColumnLayout { get; set; } = true;
    [Parameter] public bool Splittable { get; set; } = true;
    [Parameter] public string MinWidthLeft { get; set; } = "350px";
    [Parameter] public string MinWidthRight { get; set; } = "350px;";
    [Parameter] public string MinHeightLeft { get; set; } = "150px";
    [Parameter] public string MinHeightRight { get; set; } = "150px;";
}
